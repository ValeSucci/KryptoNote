    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditNota"
            android:label="EditNota"/>
        <activity
            android:name=".Encriptado"
            android:label="@string/title_activity_encriptado" />
        <activity
            android:name=".InfoNane"
            android:label="@string/title_activity_info_nane"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tutorial"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Lockpattern"
            android:label="lockpattern"
            android:theme="@style/FullScreen"
        />
    </application>

</manifest>